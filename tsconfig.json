{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "incremental": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}